<%= form_with model: model, url: form_url, method: form_method do |f| %>
  <%= render "application/components/error_panel", resource: f.object %>

  <div class="mb-3">
    <%= f.label :name, class: "c-label-required form-label" %>
    <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
  </div>
  <div class="mb-3">
    <%= f.label :name_alter, class: "form-label" %>
    <%= f.text_field :name_alter, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :name_en, class: "form-label" %>
    <%= f.text_field :name_en, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :name_cn, class: "form-label" %>
    <%= f.text_field :name_cn, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :name_alter_en, class: "form-label" %>
    <%= f.text_field :name_alter_en, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :name_alter_cn, class: "form-label" %>
    <%= f.text_field :name_alter_cn, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
